
@inject SignInManager<ApplicationUser> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LICENTA5</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/rating.css" rel="stylesheet" />
    <link href="~/css/mybusiness.css" rel="stylesheet" />
    <link runat="server" rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    <link runat="server" rel="icon" href="~/images/Logo/favicon.ico" type="image/ico" />
    <link href="~/css/card.css" rel="stylesheet" />
    
</head>
<body>

    <header style="margin:0px; padding:0px">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img class="Brand" style="width:20%; height:10%; max-height:100%; max-width:100%" src="~/images/Logo/Logo.svg" /></a>

                </div>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>

                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="nav navbar-nav flex-grow-1 ">

                        <li class="nav-item">
                            <a class="nav-link btn btn-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">About us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-link text-dark" asp-area="" asp-controller="Home" asp-action="Restaurants">Restaurants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-link text-dark" asp-area="" asp-controller="Home" asp-action="YourReservations">My reservations</a>
                        </li>


                        @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle nav-link btn btn-link text-dark" href="#" id="navbarDropdownMenuLink"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Manage
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item nav-link btn btn-link text-dark" asp-controller="Administration"
                                       asp-action="ListUsers">Users</a>
                                    <a class="dropdown-item nav-link btn btn-link text-dark" asp-controller="Administration"
                                       asp-action="ListRoles">Roles</a>
                                    <a class="dropdown-item nav-link btn btn-link text-dark" asp-controller="Administration"
                                       asp-action="ListRequests">Requests</a>

                                </div>
                            </li>
                        }
                        @if (signInManager.IsSignedIn(User) && User.IsInRole("User") && !User.IsInRole("Business"))
                        {
                            <li class="nav-item" style="width:140px">
                                <a class="nav-link btn btn-link text-danger" asp-area="" asp-controller="Restaurant" asp-action="NewRestaurantInfo">Do you own a restaurant?</a>
                            </li>
                        }
                        @if (signInManager.IsSignedIn(User) && User.IsInRole("Business"))
                        {
                            <li class="nav-item" style="width:140px">
                                <a class="nav-link btn btn-link text-danger" asp-area="" asp-controller="Restaurant" asp-action="MyBusiness">My Business</a>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>


    <section class="top-main" style="padding:0px; margin:0px">
            <div class="top-site-images">
                <img src="~/images/header1edit.jpg" alt="">
            </div>
            <div class="page-title-wrapper">
                <div class="container">
                    <div class="banner-wrapper" style="width:60%">
                       
                        @RenderSection("header");
                    </div>
                </div>
            </div>
        </section>
    
    <div class="body2" style="width:100%; height:100%;">




        <div class="container" style="width:100%">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <partial name="Footer" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", true)

    }
</body>
</html>

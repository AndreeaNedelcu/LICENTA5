@model AddBookingViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Areas.Identity.Data.ApplicationUser> SignInManager
@inject UserManager<Areas.Identity.Data.ApplicationUser> UserManager

@{
    ViewBag.Title = "Create reservation";
    var user = await UserManager.GetUserAsync(User);
    
    List<SelectListItem> hours = new List<SelectListItem>();
    for (var i = ViewBag.OpenHour; i <=24; i++)
    {
        hours.Add(new SelectListItem() {Text=i.ToString(),Value=i.ToString() });
    }
}

<h3 style="color:white">Reservation at </h3>
<h3 style="color:white">@ViewBag.ReservationAt</h3>


@if (ViewBag.SeatsLeft < 12 && ViewBag.SeatsLeft > 1)
{
    <h3 style="color:white">Only @ViewBag.SeatsLeft  seats left</h3>
}
else if (ViewBag.SeatsLeft == 1)
{
    <h3 style="color:white">Only @ViewBag.SeatsLeft  seat left</h3>
}



<form asp-controller="home" asp-action="addBooking" method="post" class="mt-3" style="color:white">
    <input hidden asp-for="ApplicationUser.Id" />
    <div class="form-group row">
        <label asp-for="NrPers" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="NrPers" class="form-control" placeholder="Seats">
            <span asp-validation-for="NrPers" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="HourComing" class="col-sm-2 col-form-label"></label>
        @*<div class="col-sm-10">
            <input asp-for="HourComing" class="form-control" placeholder="Check In Hour">
            <span asp-validation-for="HourComing" class="text-danger"></span>

        </div>*@
        <div class="col-sm-10">
            <select asp-for="HourComing" class="custom-select mr-sm-2"
                    asp-items="@hours">
                <option value="">Please select...</option>
            </select>
            <span asp-validation-for="HourComing" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Date" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Date" class="form-control" placeholder="Date" type="date" value="2022-03-15">
            <span asp-validation-for="Date" class="text-danger"></span>

        </div>
    </div>


    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-common">Create</button>
        </div>
    </div>


</form>